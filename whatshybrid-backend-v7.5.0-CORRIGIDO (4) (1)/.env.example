# Server Configuration
PORT=4000
NODE_ENV=development
HOST=0.0.0.0

# Database (SQLite for dev, PostgreSQL for production)
DATABASE_PATH=./data/whatshybrid.db
# DATABASE_URL=postgresql://user:password@localhost:5432/whatshybrid

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =========================================
# AI Providers - Add your API keys
# =========================================

# OpenAI (GPT-4o, GPT-4, GPT-3.5)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (Claude 3.5 Sonnet, Claude 3)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google AI (Gemini Pro)
GOOGLE_API_KEY=your-google-ai-api-key

# Groq (Llama 3.3, Mixtral - Ultra fast!)
GROQ_API_KEY=gsk_your-groq-api-key

# Mistral AI
MISTRAL_API_KEY=your-mistral-api-key

# Venice AI
VENICE_API_KEY=your-venice-api-key

# Cohere (RAG optimized)
COHERE_API_KEY=your-cohere-api-key

# Ollama (Local models)
OLLAMA_BASE_URL=http://localhost:11434

# AI Settings
AI_DEFAULT_PROVIDER=openai
AI_DEFAULT_MODEL=gpt-4o-mini
AI_FALLBACK_PROVIDERS=anthropic,groq
AI_CACHE_TTL=3600
AI_MAX_TOKENS=4096

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_RETRY_COUNT=3

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=WhatsHybrid <noreply@whatshybrid.com>

# Redis (Optional - for caching/sessions)
REDIS_URL=redis://localhost:6379

# Stripe (Optional - for billing)
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
