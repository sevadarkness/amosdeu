{
  "manifest_version": 3,
  "name": "WhatsHybrid Pro",
  "version": "7.6.0",
  "description": "WhatsHybrid v7.2 SmartBot IA — Análise avançada de contexto, priorização inteligente, aprendizado contínuo, métricas com detecção de anomalias. Backend API + AIService + CopilotEngine.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "WhatsHybrid Pro",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "permissions": [
    "activeTab",
    "alarms",
    "downloads",
    "notifications",
    "scripting",
    "sidePanel",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webRequest"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://api.whatsapp.com/*",
    "https://*.whatsapp.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "content/utils/constants.js",
        "content/utils/logger.js",
        "content/utils/phone-validator.js",
        "content/utils/selectors.js",
        "content/utils/version-detector.js",
        "content/utils/compatibility-manager.js",
        "content/worker-content.js",
        "content/content.js",
        "modules/event-bus.js",
        "modules/state-manager.js",
        "modules/modern-ui.js",
        "modules/text-monitor.js",
        "modules/knowledge-base.js",
        "modules/memory-system.js",
        "modules/few-shot-learning.js",
        "modules/confidence-system.js",
        "modules/training-stats.js",
        "modules/ai-service.js",
        "modules/copilot-engine.js",
        "modules/smart-replies.js",
        "modules/suggestion-injector.js",
        "lib/socket.io.min.js",
        "modules/backend-client.js",
        "modules/ai-backend-handlers.js",
        "modules/notifications.js",
        "modules/labels.js",
        "modules/crm.js",
        "modules/tasks.js",
        "modules/crm-badge-injector.js",
        "modules/task-markers-injector.js",
        "modules/quick-actions-injector.js",
        "modules/smartbot-ia.js",
        "modules/smartbot-integration.js",
        "modules/smartbot-extended.js",
        "modules/smartbot-ai-plus.js",
        "modules/smartbot-autopilot.js",
        "modules/human-typing.js",
        "modules/recover-advanced.js",
        "modules/smartbot-autopilot-v2.js",
        "modules/init.js",
        "content/top-panel-injector.js",
        "content/extractor-v6-optimized.js",
        "content/waextractor.v6.js",
        "content/label-button-injector.js",
        "chatbackup/content.js"
      ],
      "css": [
        "content/top-panel.css",
        "chatbackup/injected.css",
        "modules/modules.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/extractor.contacts.js",
        "content/inject.js",
        "content/wpp-hooks.js",
        "chatbackup/extractor.js",
        "icons/*.png",
        "icons/128.png",
        "icons/16.png",
        "icons/48.png",
        "lib/socket.io.min.js",
        "utils/google-sheets-export.js",
        "utils/storage.js",
        "utils/utils-optimized.js",
        "crm/crm.html",
        "crm/crm.css",
        "crm/crm.js",
        "modules/smartbot-ia.js",
        "modules/smartbot-integration.js",
        "modules/smartbot-extended.js"
      ],
      "matches": [
        "https://api.whatsapp.com/*",
        "https://web.whatsapp.com/*"
      ]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}